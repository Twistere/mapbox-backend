// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cadastre {
  idCadastre Int     @id @default(autoincrement())
  url        String  @db.VarChar(255)
  owner      User    @relation(fields: [idOwner], references: [idUser])
  idOwner    Int
  image      Image[]
}

model Image {
  idImage            Int       @id @default(autoincrement())
  longMid            Decimal
  latMid             Decimal
  altitude           Decimal
  listCoordinates    Decimal[]
  pathImg            String    @db.VarChar(255)
  cadastre           Cadastre @relation(fields: [IdCadastre], references: [idCadastre])
  IdCadastre Int
}

model User {
  idUser   Int        @id @default(autoincrement())
  auth     Int        @unique
  cadastre Cadastre[]

}
